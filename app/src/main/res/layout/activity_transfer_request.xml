<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data >
        <variable
            name="viewModel"
            type="com.ams.amsvistara.viewmodel.TransferReqViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.TransferRequestActivity"
        android:padding="@dimen/dialog_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:id="@+id/llHeader">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/robotoblack"
                android:text="Transfer Request"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="TR ID :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <EditText
                            android:id="@+id/etTrId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/robotoregular"
                            android:hint="Enter TR ID"
                            android:inputType="text"
                            android:longClickable="false"
                            android:text="@={viewModel.trId}"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="TR Code :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"></TextView>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <EditText
                            android:id="@+id/etTrCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/robotoregular"
                            android:hint="Enter TR Code"
                            android:inputType="text"
                            android:longClickable="false"
                            android:text="@={viewModel.trCode}"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="From Location :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <Spinner
                            android:id="@+id/spFromLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/robotoregular"
                            android:textAlignment="center"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="To Location :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"></TextView>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <Spinner
                            android:id="@+id/spToLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/robotoregular"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="From User :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"></TextView>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <Spinner
                            android:id="@+id/spFromUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/robotoregular"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="User :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"></TextView>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <Spinner
                            android:id="@+id/spUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/robotoregular"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Remarks :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"></TextView>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:clickable="true"
                        android:paddingBottom="1dp">

                        <EditText
                            android:id="@+id/etRemarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/robotoregular"
                            android:hint="Enter Remarks"
                            android:inputType="text"
                            android:longClickable="false"
                            android:text="@={viewModel.remark}"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Request Date :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"></TextView>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:id="@+id/rlReqDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:clickable="true"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <EditText
                            android:id="@+id/etRequestDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="false"
                            android:enabled="false"
                            android:fontFamily="@font/robotoregular"
                            android:hint="Select Request Date"
                            android:inputType="text"
                            android:longClickable="false"
                            android:text="@={viewModel.requestDate}"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Transfer Date :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:id="@+id/rlTransferDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <EditText
                            android:id="@+id/etTransferDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="false"
                            android:enabled="false"
                            android:fontFamily="@font/robotoregular"
                            android:hint="Select Transfer Date"
                            android:inputType="text"
                            android:longClickable="false"
                            android:text="@={viewModel.transferDate}"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/cardColor"
                    android:minHeight="50dp"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/robotobold"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="14dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Status :"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <EditText
                            android:id="@+id/etStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/robotoregular"
                            android:hint="Enter Status"
                            android:inputType="text"
                            android:longClickable="false"
                            android:text="@={viewModel.status}"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/viewall_bg"
                        android:drawableRight="@drawable/ic_save"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/robotobold"
                        android:paddingLeft="45dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:onClick="@{()->viewModel.SetTransferReq()}"
                        android:text="Save" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>