<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.ams.amsvistara.viewmodel.DisposeReqViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.DisposalRequestActivity"
        android:padding="@dimen/dialog_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:id="@+id/llHeader">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/robotoblack"
                android:text="Disposal Request"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/llHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="DR ID :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <EditText
                        android:id="@+id/etDrId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Enter DR ID"
                        android:inputType="text"
                        android:longClickable="false"
                        android:text="@={viewModel.drId}"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="DR Code :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <EditText
                        android:id="@+id/drCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Enter DR Code"
                        android:inputType="text"
                        android:longClickable="false"
                        android:text="@={viewModel.drCode}"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Disposal Type :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <Spinner
                        android:id="@+id/spDisposalType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/robotoregular"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text=" Location :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <Spinner
                        android:id="@+id/spLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/robotoregular"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="User :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <Spinner
                        android:id="@+id/spUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/robotoregular"
                        android:hint="User :"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Remarks :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <EditText
                        android:id="@+id/etRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Enter Remarks"
                        android:inputType="text"
                        android:longClickable="false"
                        android:text="@={viewModel.remark}"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Request Date :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:id="@+id/rlDisposeReqDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:clickable="true"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <EditText
                        android:id="@+id/etRequestDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:clickable="false"
                        android:enabled="false"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Enter Request Date"
                        android:inputType="text"
                        android:longClickable="false"
                        android:text="@={viewModel.requestDate}"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Disposal Date :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:id="@+id/rlDisposeDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:clickable="true"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <EditText
                        android:id="@+id/etDisposeDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:clickable="false"
                        android:enabled="false"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Enter Disposal Date"
                        android:inputType="text"
                        android:longClickable="false"
                        android:text="@={viewModel.disposeDate}"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/cardColor"
                android:minHeight="50dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="14dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Status :"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"></TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.2"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <EditText
                        android:id="@+id/etStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Enter Status"
                        android:inputType="text"
                        android:longClickable="false"
                        android:text="@={viewModel.status}"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/viewall_bg"
                android:drawableRight="@drawable/ic_save"
                android:drawablePadding="5dp"
                android:fontFamily="@font/robotobold"
                android:onClick="@{()->viewModel.setDisposeReq()}"
                android:paddingLeft="45dp"
                android:paddingRight="20dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>
</layout>